<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="49.83220571281894"
        mapbox:mapbox_cameraTargetLng="24.02735527411767"
        mapbox:mapbox_cameraZoom="17.9"
        mapbox:mapbox_cameraPitch="0.0"
        mapbox:mapbox_cameraBearing="-50.0" />


    <Button
        android:id="@+id/btnDragomanova"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="75dp"
        android:text="Корпус" />

    <Button
        android:id="@+id/btnGeolocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:text="Show geolocation" />

</FrameLayout>
